{{!< default}}

<main id="main">
	<div class="article {{post_class}}">
		<header class="header">
			{{#post}}<h1 class="title">{{title}}</h1>{{/post}}
			
			<div class="deck">
				{{#get "posts" limit="all"}}{{plural pagination.total empty="No post" singular="% post" plural="% posts"}}{{/get}}
			</div>
		</header>
		
		<section class="content">
			{{#get "posts" limit="all"}}
                {{#foreach posts}}
                    {{> loop}}
                {{/foreach}}
            {{/get}}
		</section>
		
		<section class="tags">
		{{#get "tags" limit="all" include="count.posts"}}
			{{#foreach tags}}
				<a href="{{url}}" title="">{{name}}<sup>{{count.posts}}</sup></h2></a>
			{{/foreach}}
		{{/get}}
		</section>
	</div>
</main>